# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/lcc360

# MongoDB Atlas (Cloud) - Uncomment and configure if using cloud database
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/lcc360?retryWrites=true&w=majority

# Security (Add these for production)
# JWT_SECRET=your_jwt_secret_key_here
# JWT_EXPIRE=30d

# Email Configuration (Future feature)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# Frontend URL (For CORS)
FRONTEND_URL=http://localhost:3000

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
